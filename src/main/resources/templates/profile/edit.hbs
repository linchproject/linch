{{>_partials/fields}}

{{#partial "inner"}}

<h1 class="page-header">{{i18n "linch.form.edit"}}</h1>

<form class="form-horizontal" role="form" action="{{path "doEdit"}}" method="post">

    {{{block "readonlyField" name="username" value=user.username i18nKey="linch.user.username"}}}
    {{{block "textField" name="firstName" value=data.values.firstName error=data.errors.firstName i18nKey="linch.user.first.name"}}}
    {{{block "textField" name="lastName" value=data.values.lastName error=data.errors.lastName i18nKey="linch.user.last.name"}}}
    {{{block "textField" name="email" value=data.values.email error=data.errors.email i18nKey="linch.user.email" required=true}}}

    {{#block "buttonsField"}}
        <input class="btn btn-primary" type="submit" name="submit" value="{{i18n "linch.form.save"}}">
        <a class="btn btn-default" href="{{path "index"}}">{{i18n "linch.form.cancel"}}</a>
    {{/block}}

</form>

{{/partial}}

{{>profile/_base}}