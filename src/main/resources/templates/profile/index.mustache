{{<super}}{{$inner}}

<h1 class="page-header">{{#i18n}}linch.profile{{/i18n}}</h1>

<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.username{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{user.username}}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.first.name{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{user.firstName}}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.last.name{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{user.lastName}}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.email{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{user.email}}</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-5">
            <a href="{{#path}}/profile/edit{{/path}}" class="btn btn-default">{{#i18n}}linch.edit{{/i18n}}</a>
        </div>
    </div>
</form>

{{/inner}}{{/super}}