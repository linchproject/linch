{{<super}}
{{$content}}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{#error}}
                        <div class="alert alert-danger">{{error}}</div>
                    {{/error}}
                    <form role="form" action="{{#path}}/login{{/path}}" method="post">
                        <fieldset>
                            <div class="form-group input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-user"></i>
                                </span>
                                <input class="form-control" placeholder="Username" name="username" type="text" value="{{username}}" required autofocus>
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                <input class="form-control" placeholder="Password" name="password" type="password" required>
                            </div>
                            <!--
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                                </label>
                            </div>
                            -->
                            <input type="hidden" name="next" value="{{next}}">
                            <input class="btn btn-lg btn-success btn-block" type="submit" name="submit" value="Sign in">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/content}}
{{/super}}