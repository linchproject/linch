{{<../super}}{{$inner}}

<h1 class="page-header">{{#i18n}}linch.settings{{/i18n}}</h1>

<form class="form-horizontal" role="form" action="{{#path}}doEdit{{/path}}" method="post">
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.settings.indexPath{{/i18n}}</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="indexPath" name="indexPath" value="{{form.indexPath}}">
            {{#form.indexPath.error}}<span class="help-block">{{.}}</span>{{/form.indexPath.error}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-5">
            <input class="btn btn-primary" type="submit" name="submit" value="{{#i18n}}linch.form.save{{/i18n}}">
            <a class="btn btn-default" href="{{#path}}index{{/path}}">{{#i18n}}linch.form.cancel{{/i18n}}</a>
        </div>
    </div>
</form>

{{/inner}}{{/../super}}