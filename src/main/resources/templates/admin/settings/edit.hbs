{{#include "_partials/fields"}}{{/include}}

{{#partial "inner"}}

<h1 class="page-header">{{i18n "linch.settings"}}</h1>

<form class="form-horizontal" role="form" action="{{path "doEdit"}}" method="post">

    {{#block "inputField" name="indexPath" value=form.indexPath i18nKey="linch.settings.indexPath"}}{{/block}}

    {{#block "buttonsField"}}
        <input class="btn btn-primary" type="submit" name="submit" value="{{i18n "linch.form.save"}}">
        <a class="btn btn-default" href="{{path "index"}}">{{i18n "linch.form.cancel"}}</a>
    {{/block}}

</form>

{{/partial}}

