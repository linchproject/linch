{{<../super}}{{$inner}}

<h1 class="page-header">{{#i18n}}linch.users{{/i18n}}</h1>

<table class="table">
    <thead>
    <tr>
        <th>#</th>
        <th>{{#i18n}}linch.user.username{{/i18n}}</th>
        <th>{{#i18n}}linch.user.first.name{{/i18n}}</th>
        <th>{{#i18n}}linch.user.last.name{{/i18n}}</th>
        <th>{{#i18n}}linch.user.email{{/i18n}}</th>
    </tr>
    </thead>
    <tbody>
    {{#users}}
        <tr>
            <td>{{id}}</td>
            <td><a href="{{#path}}view?username={{username}}{{/path}}">{{username}}</a></td>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{email}}</td>
        </tr>
    {{/users}}
    {{^users}}
        <tr>
            <td colspan="4">{{#i18n}}linch.users.no.users{{/i18n}}</td>
        </tr>
    {{/users}}
    </tbody>
</table>

<a href="{{#path}}create{{/path}}">{{#i18n}}linch.users.add.user{{/i18n}}</a>

{{/inner}}{{/../super}}