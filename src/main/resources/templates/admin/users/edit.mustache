{{<../super}}{{$inner}}

<h1 class="page-header">{{#i18n}}linch.users.edit.user{{/i18n}}: {{theUser.username}}</h1>

<form class="form-horizontal" role="form" action="{{#path}}.{{/path}}" method="post">
    <input type="hidden" name="username" value="{{theUser.username}}">

    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.user.username{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{theUser.username}}</p>
        </div>
    </div>
    <div class="form-group">
        <label for="firstName" class="col-sm-3 control-label">{{#i18n}}linch.user.first.name{{/i18n}}</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="firstName" name="firstName" value="{{theUser.firstName}}">
        </div>
    </div>
    <div class="form-group">
        <label for="lastName" class="col-sm-3 control-label">{{#i18n}}linch.user.last.name{{/i18n}}</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="lastName" name="lastName" value="{{theUser.lastName}}">
        </div>
    </div>
    <div class="form-group">
        <label for="email" class="col-sm-3 control-label">{{#i18n}}linch.user.email{{/i18n}}</label>
        <div class="col-sm-5">
            <input type="email" class="form-control" id="email" name="email" value="{{theUser.email}}" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-5">
            <input class="btn btn-default" type="submit" name="submit" value="{{#i18n}}linch.save{{/i18n}}">
        </div>
    </div>
</form>

{{/inner}}{{/../super}}