{{<../super}}{{$inner}}

<h1 class="page-header">{{#i18n}}linch.view.user{{/i18n}}: {{theUser.username}}</h1>

<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.username{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{theUser.username}}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.first.name{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{theUser.firstName}}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.last.name{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{theUser.lastName}}</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{#i18n}}linch.email{{/i18n}}</label>
        <div class="col-sm-5">
            <p class="form-control-static">{{theUser.email}}</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-5">
            <a href="{{#path}}edit?username={{theUser.username}}{{/path}}" class="btn btn-default">{{#i18n}}linch.edit{{/i18n}}</a>
        </div>
    </div>
</form>

{{/inner}}{{/../super}}