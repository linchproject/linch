{{>_partials/fields}}

{{#partial "inner"}}

<h1 class="page-header">{{i18n "linch.users.add.user"}}</h1>

<form class="form-horizontal" role="form" action="{{path "doCreate"}}" method="post">

    {{{block "textField" name="username" value=data.values.username error=data.errors.username i18nKey="linch.user.username" required=true}}}
    {{{block "textField" name="firstName" value=data.values.firstName error=data.errors.firstName i18nKey="linch.user.first.name"}}}
    {{{block "textField" name="lastName" value=data.values.lastName error=data.errors.lastName i18nKey="linch.user.last.name"}}}
    {{{block "textField" name="email" value=data.values.email error=data.errors.email.error i18nKey="linch.user.email" required=true}}}
    {{{block "passwordField" name="password" value=data.values.password error=data.errors.password i18nKey="linch.user.password" required=true}}}
    {{{block "passwordField" name="confirmPassword" value=data.values.confirmPassword error=data.errors.confirmPassword i18nKey="linch.users.confirm.password" required=true}}}

    {{#block "buttonsField"}}
        <input class="btn btn-primary" type="submit" name="submit" value="{{i18n "linch.form.save"}}">
        <a class="btn btn-default" href="{{path "index"}}">{{i18n "linch.form.cancel"}}</a>
    {{/block}}

</form>

{{/partial}}

{{>admin/_base}}