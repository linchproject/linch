{{#include "_partials/fields"}}{{/include}}

{{#partial "inner"}}

<h1 class="page-header">{{i18n "linch.users.add.user"}}</h1>


<form class="form-horizontal" role="form" action="{{path "doCreate"}}" method="post">

    {{#block "inputField" name="username" value=form.username error=form.username.error i18nKey="linch.user.username"}}{{/block}}
    {{#block "inputField" name="firstName" value=form.firstName error=form.firstName.error i18nKey="linch.user.first.name"}}{{/block}}
    {{#block "inputField" name="lastName" value=form.lastName error=form.lastName.error i18nKey="linch.user.last.name"}}{{/block}}
    {{#block "inputField" name="email" value=form.email error=form.email.error i18nKey="linch.user.email"}}{{/block}}
    {{#block "passwordField" name="password" value=form.password error=form.password.error i18nKey="linch.user.password"}}{{/block}}
    {{#block "passwordField" name="confirmPassword" value=form.confirmPassword error=form.confirmPassword.error i18nKey="linch.users.confirm.password"}}{{/block}}

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-5">
            <input class="btn btn-primary" type="submit" name="submit" value="{{i18n "linch.form.save"}}">
            <a class="btn btn-default" href="{{path "index"}}">{{i18n "linch.form.cancel"}}</a>
        </div>
    </div>
</form>

{{/partial}}

{{>admin/_base}}