{{#include "_partials/fields"}}{{/include}}

{{#partial "inner"}}

<h1 class="page-header">{{i18n "linch.groups.delete.group"}}: {{group.groupname}}</h1>

<form class="form-horizontal" role="form" action="{{path "doDelete"}}" method="post">

    {{#block "hiddenField" name="groupname" value=group.groupname}}{{/block}}

    <div class="alert alert-danger">
        {{i18n "linch.groups.delete.are.you.sure"}}
    </div>

    {{#block "buttonsField"}}
        <input class="btn btn-danger" type="submit" name="submit" value="{{i18n "linch.form.delete"}}">
        <a class="btn btn-default" href="{{path "view" groupname=group.groupname}}">{{i18n "linch.form.cancel"}}</a>
    {{/block}}

</form>

{{/partial}}

{{>admin/_base}}